{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "lf",
  "printWidth": 88,
  "proseWrap": "always",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": "*.{json,jsonc}",
      "options": {
        "printWidth": 0
      }
    }
  ]
}
